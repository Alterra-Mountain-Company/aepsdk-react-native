require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

platform :ios, '10.0'
target 'AEPSampleApp' do
  config = use_native_modules!
  pod 'AEPOptimize', :path => '../../../../optimize/aepsdk-optimize-ios'

  use_react_native!(
    :path => config[:reactNativePath],
    #to enable hermes on iOS, change `false` to `true` and then install pods
    :hermes_enabled => false
  )

  pod "AEPMessaging", :git => "https://github.com/adobe/aepsdk-messaging-ios.git", :branch => "staging"
  pod "AEPOptimize", :git => "https://github.com/adobe/aepsdk-optimize-ios.git", :branch => "staging"
  # services pointing to dev branch until 3.5.1 is released 
  pod "AEPServices", :git => "https://github.com/adobe/aepsdk-core-ios.git", :branch => "dev-v3.5.1"

  # pod 'AEPCore'
  # pod 'AEPLifecycle'
  # pod 'AEPIdentity'
  # pod 'AEPSignal'
  # pod 'AEPEdge'
  # pod 'AEPEdgeIdentity'
  # pod 'AEPEdgeConsent'

  target 'AEPSampleAppTests' do
    inherit! :complete
    
  end


  post_install do |installer|
    react_native_post_install(installer)
  end
end
