{
  "name": "aepsdk-react-native",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": [
      "**/@adobe/**",
      "**/react",
      "**/@react-navigation/**",
      "**/react/**",
      "**/react-native",
      "**/react-native/**",
      "**/react-navigation/**",
      "**/jest/**"
    ]
  },
  "scripts": {
    "clean": "rm yarn.lock | 1 & rm -rf node_modules | 1 & lerna run cleanup",
    "bootstrap": "lerna bootstrap",
    "tests:jest": "jest",
    "release-dry-run": "lerna publish from-package --skip-npm --skip-git",
    "sampleapp:ios:pod:update": "cd apps/AEPSampleApp/ios && pod update",
    "sampleapp:ios:pod:install": "cd apps/AEPSampleApp/ios && pod install",
    "sampleapp:ios:build": "cd apps/AEPSampleApp && npx react-native run-ios",
    "sampleapp:android:build": "cd apps/AEPSampleApp/android && ./gradlew assembleRelease -x bundleReleaseJsAndAssets"
  },
  "devDependencies": {
    "@babel/generator": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^3.1.3",
    "babel-preset-react-native": "5.0.2",
    "flow-typed": "^2.5.2",
    "jest": "^26.6.3",
    "lerna": "^4.0.0"
  }
}
